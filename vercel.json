{
  "builds": [
    {
      "src": "api/bot.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "10mb",
        "runtime": "python3.9"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/webhook",
      "dest": "api/bot.py",
      "methods": ["POST"]
    }
  ],
  "env": {
    "TELEGRAM_BOT_TOKEN": "@telegram_bot_token",
    "GEMINI_API_KEY": "@gemini_api_key"
  }
}
